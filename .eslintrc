# root
root: true

# code env
env:
  node: true
  mocha: true

# rules
rules:
  # basic
  semi: [2, always] # ;
  indent: [2, 2]
  quotes: [2, single] # '' | ""
  eqeqeq: 2 # ===
  camelcase: 2
  radix: 2 # parseInt('100', 10)
  yoda: 2 # 'blue' === sky
  strict: [2, global] # 'use strict'

  # 大括号
  curly: 2 # 需要大括号
  brace-style: 2 # 左大括号同一行

  # disable default
  no-unused-vars: 0 # 已定义, 未使用
  no-console: 0 # console

extends: 'eslint:recommended'